<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>SPRING_BOOT_VERSION</version>
    </parent>

    <groupId>com.ciicgat.grus.boot</groupId>
    <artifactId>grus-boot-starter-parent</artifactId>
    <version>GRUS_VERSION</version>
    <packaging>pom</packaging>
    <name>Grus Starter Parent</name>
    <url>https://java.guide.wuxingdev.cn/</url>
    <description>Parent pom providing dependency and plugin management for applications
        built with Maven</description>
    <scm>
        <connection>scm:git:git://gitlab.wuxingdev.cn/java/grus.git</connection>
        <developerConnection>scm:git:ssh://git@gitlab.wuxingdev.cn/java/grus.git</developerConnection>
        <url>https://gitlab.wuxingdev.cn/java/grus</url>
    </scm>

    <developers>
        <developer>
            <name>August Zhou</name>
            <email>august.zhou@guanaitong.com</email>
            <organization>www.guanaitong.com</organization>
        </developer>
        <developer>
            <name>Albert Sun</name>
            <email>albert.sun@guanaitong.com</email>
            <organization>www.guanaitong.com</organization>
        </developer>
        <developer>
            <name>Wan Chongyang</name>
            <email>chongyang.wan@guanaitong.com</email>
            <organization>www.guanaitong.com</organization>
        </developer>
        <developer>
            <name>Stanley</name>
            <email>stanley.shen@guanaitong.com</email>
            <organization>www.guanaitong.com</organization>
        </developer>
        <developer>
            <name>Jiaju Wei</name>
            <email>jiaju.wei@guanaitong.com</email>
            <organization>www.guanaitong.com</organization>
        </developer>
    </developers>
    <licenses>
        <license>
            <name>The Apache License, Version 2.0</name>
            <url>https://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>11</java.version>
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>
        <maven-compiler-plugin.version>3.8.0</maven-compiler-plugin.version>
        <jacoco-maven-plugin.version>0.8.3</jacoco-maven-plugin.version>
        <!--DO NOT change es version,because server version is 7.3.1-->
        <elasticsearch.version>7.3.1</elasticsearch.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.ciicgat.grus</groupId>
                <artifactId>grus-build</artifactId>
                <version>GRUS_VERSION</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!--api aggregation -->
            <dependency>
                <groupId>com.ciicgat.api</groupId>
                <artifactId>ciicgat-agg-member-bom</artifactId>
                <version>2.0-SNAPSHOT</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.ciicgat.api</groupId>
                <artifactId>ciicgat-agg-asset-bom</artifactId>
                <version>2.0-SNAPSHOT</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.ciicgat.api</groupId>
                <artifactId>ciicgat-agg-payment-bom</artifactId>
                <version>2.0-SNAPSHOT</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.ciicgat.api</groupId>
                <artifactId>ciicgat-agg-settlement-bom</artifactId>
                <version>2.0-SNAPSHOT</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.ciicgat.api</groupId>
                <artifactId>ciicgat-agg-newapp-bom</artifactId>
                <version>2.0-SNAPSHOT</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.ciicgat.api</groupId>
                <artifactId>ciicgat-agg-base-bom</artifactId>
                <version>2.0-SNAPSHOT</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.ciicgat.api</groupId>
                <artifactId>ciicgat-agg-app-bom</artifactId>
                <version>2.0-SNAPSHOT</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.ciicgat.api</groupId>
                <artifactId>ciicgat-agg-commerce-bom</artifactId>
                <version>2.0-SNAPSHOT</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.ciicgat.api</groupId>
                <artifactId>ciicgat-agg-card-bom</artifactId>
                <version>2.0-SNAPSHOT</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>


    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>${maven-compiler-plugin.version}</version>
                    <configuration>
                        <source>11</source>
                        <target>11</target>
                        <encoding>UTF-8</encoding>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.jacoco</groupId>
                    <artifactId>jacoco-maven-plugin</artifactId>
                    <version>${jacoco-maven-plugin.version}</version>
                    <executions>
                        <!-- Prepares the property pointing to the JaCoCo runtime agent which is passed as
                             VM argument when Maven the Surefire plugin is executed. -->
                        <execution>
                            <id>pre-unit-test</id>
                            <goals>
                                <goal>prepare-agent</goal>
                            </goals>
                        </execution>
                        <!-- Ensures that the code coverage report for unit tests is created after unit tests have
                             been run. -->
                        <execution>
                            <id>post-unit-test</id>
                            <phase>test</phase>
                            <goals>
                                <goal>report</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <repositories>
        <repository>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <id>central</id>
            <url>http://repo.wuxingdev.cn/artifactory/public</url>
        </repository>
        <repository>
            <snapshots/>
            <id>snapshots</id>
            <url>http://repo.wuxingdev.cn/artifactory/public</url>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <id>central</id>
            <url>http://repo.wuxingdev.cn/artifactory/public</url>
        </pluginRepository>
        <pluginRepository>
            <snapshots/>
            <id>snapshots</id>
            <url>http://repo.wuxingdev.cn/artifactory/public</url>
        </pluginRepository>
    </pluginRepositories>

    <distributionManagement>
        <repository>
            <id>releases</id>
            <name>reg.wuxingdev.cn-releases</name>
            <url>http://repo.wuxingdev.cn/artifactory/libs-release</url>
        </repository>
        <snapshotRepository>
            <id>snapshots</id>
            <name>reg.wuxingdev.cn-snapshots</name>
            <url>http://repo.wuxingdev.cn/artifactory/libs-snapshot</url>
        </snapshotRepository>
    </distributionManagement>
</project>
